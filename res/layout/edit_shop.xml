<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mzam.starter.EditShopInfo" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="16dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:text="Edit Shop Inforamtion: " />

    <com.parse.ParseImageView
        android:id="@+id/shopEditImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_x="132dp"
        android:layout_y="50dp"
        android:src="@drawable/tab_shop" />

    <EditText
        android:id="@+id/nameShopEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="81dp"
        android:layout_y="92dp"
        android:ems="10"
        android:focusable="true" />

    <TextView
        android:id="@+id/nameShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="30dp"
        android:layout_x="8dp"
        android:layout_y="108dp"
        android:text="Name: " />

    <TextView
        android:id="@+id/shopCatagory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="160dp"
        android:text="Catagory:" />

    <EditText
        android:id="@+id/DescEditShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="104dp"
        android:layout_y="254dp"
        android:ems="10" >

    </EditText>

    <TextView
        android:id="@+id/DescShopEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="34dp"
        android:layout_y="250dp"
        android:text="Descreption" />

    <Spinner
        android:id="@+id/CatagorySpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="109dp"
        android:layout_y="168dp"
        android:drawSelectorOnTop="true"
        android:entries="@array/CategoryItems"
        android:prompt="@string/Catagroy_Prompt" />

    <Button
        android:id="@+id/UpdateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="67dp"
        android:layout_y="375dp"
        android:text="Update Information" />

</AbsoluteLayout>